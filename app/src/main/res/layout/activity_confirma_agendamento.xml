<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FinalizarCompraActivity">

    <!-- Icone de confirmação -->
    <ImageView
        android:id="@+id/icon_confirmacao"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_check_circle_24"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de confirmação -->
    <TextView
        android:id="@+id/text_confirmacao_agendamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendamento Concluído Com Sucesso!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/icon_confirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão de voltar à tela inicial -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_voltar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar à Tela Inicial"
        android:textSize="18sp"
        style="@style/Button"
        android:textColor="@color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/text_confirmacao_agendamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
